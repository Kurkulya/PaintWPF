<UserControl x:Class="PaintWPF.PColor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaintWPF"
             mc:Ignorable="d" Height="59.821" Width="50">
    <Grid>
        <Button x:Name="bPink" Content="" HorizontalAlignment="Left" Margin="25,0,0,0" VerticalAlignment="Top" Width="25" Background="Magenta" Click="SetColor"/>
        <Button x:Name="bRed" Content="" HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top" Width="25" Background="Red" Click="SetColor"/>
        <Button x:Name="bBlue" Content="" HorizontalAlignment="Left" Margin="25,40,0,0" VerticalAlignment="Top" Width="25" Background="Blue" Click="SetColor"/>
        <Button x:Name="bBlack" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="25" Background="Black" Click="SetColor"/>
        <Button x:Name="bYellow" Content="" HorizontalAlignment="Left" Margin="25,20,0,0" VerticalAlignment="Top" Width="25" Background="Yellow" Click="SetColor"/>
        <Button x:Name="bGreen" Content="" HorizontalAlignment="Left" Margin="0,40,0,0" VerticalAlignment="Top" Width="25" Background="Lime" Click="SetColor"/>

    </Grid>
</UserControl>
